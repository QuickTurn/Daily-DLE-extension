{
  "manifest_version": 2,
  "name": "Bookmark Folder Navigator",
  "version": "1.2",
  "description": "Navigate and track bookmarks with categories, done checkboxes, and play mode.",
  "permissions": ["bookmarks", "storage", "tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "commands": {
    "mark_done": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Mark current game as done and go to next"
    },
    "skip_game": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Skip current game"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "DLE Navigator"
  },
  "web_accessible_resources": ["play.html"]
}
